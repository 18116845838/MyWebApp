@page
@model MyWebApp.Pages.Message.MineModel
@{
}

<form  method="post">
    @for (int i = 0; i < Model.Messages.Count; i++)
    {

        <input asp-for="Messages[i].Selected" />
        <span>
            @Model.Messages[i].CreateTime
        </span>
        <span>
            @Model.Messages[i].Content
        </span>
        <input asp-for="Messages[i].Id" type="hidden" />
        <hr />
    }
<input type="submit" name="name" value="提交" />
</form>